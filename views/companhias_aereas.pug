doctype=html
html
  head
    include includes/libs.pug
    link(rel='stylesheet', type='text/css', href='/css/nav.css')
    link(rel='stylesheet', type='text/css', href='/css/table.css')
    script(src='/js/table.js')
    title Lista de Companhias Aereas
  body
    include includes/nav.pug
    div(class='table__title')
      text(class='table__title-text') Lista de Companhias Aereas
      button(
        class='table__title-button'
        onclick='window.location.href += "/new"'
      ) NOVA COMPANHIA
    table(class='table')
      tr(class='table__row')
        th(class='table__header') COD 
        th(class='table__header') Nome 
        th(class='table__header') Pais
        th(class='table__header') Ações
      each companhia_aerea in companhias_aereas
        tr(class='table__row')
          td(class='table__cell')=companhia_aerea.CD_CMPN_AEREA
          td(class='table__cell')=companhia_aerea.NM_CMPN_AEREA
          td(class='table__cell')=companhia_aerea.CD_PAIS
          td(class='table__cell')
            div(class='table__icons')
              img(
                src='/svg/pencil.svg'
                class='table__icon'
                onclick=`window.location.href += "/${companhia_aerea.CD_CMPN_AEREA}/edit"`
              )
              img(
                src='/svg/trash.svg'
                class='table__icon'
                onclick=`remove('companhia_aereas', '${companhia_aerea.CD_CMPN_AEREA}')`
              )
