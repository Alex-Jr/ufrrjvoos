doctype=html
html
  head
    include includes/libs.pug
    link(rel='stylesheet', type='text/css', href='/css/consultas_form.css')
    title=title

  body
    form(
      id='form'
      class='form'
      method='GET'
      action='/consultas_voos/5'
    )
      div(class='form__input-group')
        label(class='form__input-title') Operador

        select(
          required
          class='form__input'
          type='text'
          name='CD_OPERADOR'
        )
          option(value='lt') Menor que
          option(value='lte') Menor ou igual a
          option(value='eq') Igual a
          option(value='gte') Maior ou igual a
          option(value='gt') Maior que

      
      div(class='form__input-group')
        label(class='form__input-title') Cliente

        input(
          required
          class='form__input'
          type='number',
          name='CD_PSGR',
          placeholder='Digite o c√≥digo do cliente'
        )

      div(class='form__buttons')
        button(
          class='form_button'
          onclick='window.history.back()'
        ) CANCELAR

        button(
          class='form_button'
        ) SALVAR